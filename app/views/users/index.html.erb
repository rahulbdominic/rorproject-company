<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

<style>

</style>

<div style="height: 8%; padding: 30px; color:white; padding-top:8%; background:#F44336">
  <div class="container">
    <h1>Users</h1>
  </div>
</div>

<div class="container">

  <p id="notice"><%= notice %></p>

  <table style="margin-top:20px;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= @companies.find(user.company_id).name %></td>
            <td style="text-align:right"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Confirm deletion?' },
            :class => "btn", :style => "color:white; background:#F44336" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <div >
    <%= link_to 'New User', new_user_path, :class => "btn", :style => "color:white;" %>
    <%= link_to 'Companies', "companies", :class => "btn", :style => "color:white;" %>
  </div>
</div>
<!-- Compiled and minified JavaScript -->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
